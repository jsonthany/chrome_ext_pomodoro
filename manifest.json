{
    "manifest_version": 3,
    "name": "my_Pomodoro",
    "version": "1.0.0",
    "description": "A tool to help implement the Pomodoro technique (a popular time management technique)!",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_title": "my_Pomodoro",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
    }
}